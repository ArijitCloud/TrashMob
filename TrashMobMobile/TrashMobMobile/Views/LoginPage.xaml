<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrashMobMobile.Views.LoginPage"
             Shell.FlyoutBehavior="Disabled">

    <ContentPage.Resources>
        <StyleSheet Source="/Assets/login.css" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <StackLayout Orientation="Vertical" HorizontalOptions="Center" VerticalOptions="CenterAndExpand">
                <Image Source="TME_BusinessCard_front.png" />
                <Button x:Name="btnSignInSignOut" Text="Sign in" Command="{Binding LoginCommand}" VerticalOptions="End" HorizontalOptions="FillAndExpand"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>